{
    "manifest_version": 2,
    "applications": {
        "gecko": {
            "id": "ffa@mpt3.net"
        }
    },
    
    "name": "Fanfiction Assistant",
    "description": "A simple assistant for reading fanfiction on fanfiction.net",
    "version": "4.2",
    
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "activeTab",
        "storage",
        "*://www.fanfiction.net/s/*",
        "*://www.fanfiction.net/u/*",
        "*://www.fanfiction.net/alert/*",
        "*://www.fanfiction.net/favorites/*",
        "*://www.fanfiction.net/j/*",
        "*://www.fanfiction.net/community/*",
        "*://www.fanfiction.net/anime/*",
        "*://www.fanfiction.net/book/*",
        "*://www.fanfiction.net/cartoon/*",
        "*://www.fanfiction.net/comic/*",
        "*://www.fanfiction.net/game/*",
        "*://www.fanfiction.net/misc/*",
        "*://www.fanfiction.net/play/*",
        "*://www.fanfiction.net/movie/*",
        "*://www.fanfiction.net/tv/*",
        "*://www.fanfiction.net/*-Crossovers/*"
    ],
    "content_scripts": [{
        "matches": [
            "*://www.fanfiction.net/s/*"
        ],
        "js": [
            "inject.js"
        ],
        "run_at": "document_end"
    }]
}
